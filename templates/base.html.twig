<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}
			{% endblock %} - Poedia
		</title>
		<link rel="icon" href={{ asset('/images/core/poedia-icon.svg') }}>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:wght@300;500&display=swap" rel="stylesheet">
		{% block stylesheets %}
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer"/>
			<link rel="stylesheet" href={{ asset('css/mdb.min.css') }}>
			<link rel="stylesheet" href={{ asset('css/custom.css') }}>
		{% endblock %}

		{% block javascripts %}
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous" defer></script>
			<script src={{ asset('/js/mdb.min.js') }} defer></script>
			<script src={{ asset('/js/custom.js') }} defer></script>
		{% endblock %}
	</head>
	<body>
		<!-- Navbar -->
		<nav class="navbar navbar-expand-lg navbar-light bg-light">
			<!-- Container wrapper -->
			<div class="container-fluid">
				<!-- Toggle button -->
				<button class="navbar-toggler" type="button" data-mdb-toggle="collapse" data-mdb-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<i class="fas fa-bars"></i>
				</button>

				<!-- Collapsible wrapper -->
				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<!-- Navbar brand -->
					<a class="navbar-brand mt-2 mt-lg-0" href={{ path('homepage') }}>
						<img src={{ asset('/images/core/poedia-logo.svg') }} width="180" alt="Poedia Logo" loading="lazy"/>
					</a>
					<!-- Left links -->
					<ul class="navbar-nav me-auto mb-2 mb-lg-0">
						<li class="nav-item">
							<a class="nav-link" href="#">Dashboard</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="#">Team</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="#">Projects</a>
						</li>
					</ul>
					<!-- Left links -->
				</div>
				<!-- Collapsible wrapper -->

				<!-- Right elements -->
				{% if is_granted('AUTHENTICATED_FULLY') %}
					<div class="d-flex align-items-center">
						<!-- Icon -->
						<a class="text-reset me-3" href="#">
							<i class="fas fa-shopping-cart"></i>
						</a>

						<!-- Notifications -->
						<div class="dropdown">
							<a class="text-reset me-3 dropdown-toggle hidden-arrow" href="#" id="navbarDropdownMenuLink" role="button" data-mdb-toggle="dropdown" aria-expanded="false">
								<i class="fas fa-bell"></i>
								<span class="badge rounded-pill badge-notification bg-danger">1</span>
							</a>
							<ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownMenuLink">
								<li>
									<a class="dropdown-item" href="#">Some news</a>
								</li>
								<li>
									<a class="dropdown-item" href="#">Another news</a>
								</li>
								<li>
									<a class="dropdown-item" href="#">Something else here</a>
								</li>
							</ul>
						</div>
						<!-- Avatar -->
						<div class="dropdown">
							<a class="dropdown-toggle d-flex align-items-center hidden-arrow" href="#" id="navbarDropdownMenuAvatar" role="button" data-mdb-toggle="dropdown" aria-expanded="false">
								<img src="https://mdbcdn.b-cdn.net/img/new/avatars/2.webp" class="rounded-circle" height="25" alt="Black and White Portrait of a Man" loading="lazy"/>
							</a>
							<ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownMenuAvatar">
								<li>
									<a class="dropdown-item" href="#">My profile</a>
								</li>
								<li>
									<a class="dropdown-item" href="#">Settings</a>
								</li>
								<li>
									<a class="dropdown-item" href="#">Logout</a>
								</li>
							</ul>
						</div>
					</div>
				{% else %}
					<div class="d-flex align-items-center gap-2">
						<a class="btn btn-primary" href="{{ path('login') }}">Se connecter</a>
						<a class="btn btn-outline-primary" href="{{ path('register') }}">S'inscrire</a>
					</div>
				{% endif %}
				<!-- Right elements -->
			</div>
			<!-- Container wrapper -->
		</nav>
		<!-- Navbar -->

		<!-- Main -->
		<main class="mt-3 container">
			{% block body %}{% endblock %}
		</main>
		<!-- Main -->

		<!-- Footer -->
		<footer class="mt-5 text-center text-lg-start bg-white text-muted">
			<!-- Section: Social media -->
			<section
				class="d-flex justify-content-center justify-content-lg-between p-4 border-bottom">
				<!-- Left -->
				<div class="me-5 d-none d-lg-block">
					<span>Suivez nos actualités sur les réseaux sociaux:</span>
				</div>
				<!-- Left -->

				<!-- Right -->
				<div>
					<a href="" class="me-4 link-secondary">
						<i class="fab fa-linkedin"></i>
					</a>
					<a href="" class="me-4 link-secondary">
						<i class="fab fa-github"></i>
					</a>
				</div>
				<!-- Right -->
			</section>
			<!-- Section: Social media -->

			<!-- Section: Links  -->
			<section class="">
				<div class="container text-center text-md-start mt-5">
					<!-- Grid row -->
					<div class="row mt-3">
						<!-- Grid column -->
						<div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4">
							<!-- Content -->
							<h6 class="text-uppercase fw-bold mb-4">
								<img src={{ asset('/images/core/poedia-logo.svg') }} width="180" alt="Poedia Logo" loading="lazy"/>
							</h6>
							<p>
								Poedia est une solution open-source (libre) de gestion  pour les bibliothèques et médiathèques. Testez-la dès maintenant !
							</p>
						</div>
						<!-- Grid column -->

						<!-- Grid column -->
						<div
							class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-4">
							<!-- Links -->
							<h6 class="text-uppercase fw-bold mb-4">
								Fonctionnalités
							</h6>
							<p>Gestion des auteurs</p>
							<p>Gestion des livres</p>
							<p>Gestion des emprunts</p>
						</div>
						<!-- Grid column -->

						<!-- Grid column -->
						<div
							class="col-md-3 col-lg-2 col-xl-2 mx-auto mb-4">
							<!-- Links -->
							<h6 class="text-uppercase fw-bold mb-4">
								Liens utiles
							</h6>
							<p>
								<a href="#!" class="text-reset">Les contributeurs</a>
							</p>
							<p>
								<a href="#!" class="text-reset">Github</a>
							</p>
							<p>
								<a href="#!" class="text-reset">Documentation</a>
							</p>
						</div>
						<!-- Grid column -->

						<!-- Grid column -->
						<div
							class="col-md-4 col-lg-3 col-xl-3 mx-auto mb-md-0 mb-4">
							<!-- Links -->
							<h6 class="text-uppercase fw-bold mb-4">Contact</h6>
							<p>
								Fait avec <i class="fas fa-heart text-secondary"></i> à Paris par une équipe de passionnés en solution numérique.
							</p>
							<a href={{ path('contact') }} class="btn btn-primary">
								<i class="fas fa-envelope text-light"></i>
								contact@poedia.fr
							</a>
						</div>
						<!-- Grid column -->
					</div>
					<!-- Grid row -->
				</div>
			</section>
			<!-- Section: Links  -->

			<!-- Copyright -->
			<div class="text-center p-4" style="background-color: rgba(0, 0, 0, 0.025);">
				MIT License © {{ 'now'|date('Y') }}
				<a class="text-reset fw-bold" href={{ path('homepage') }}>Poedia</a>
			</div>
			<!-- Copyright -->
		</footer>
		<!-- Footer -->
	</body>
</html>
