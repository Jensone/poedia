{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!{% endblock %}

{% block body %}
<main>
    <h1>Page de contact</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    

    {{ form_start(form, {'method': 'POST'}) }}
  <div class="row mb-4">
    <div class="col">
      <div class="form-outline">
      {# {{ form_row(contactType.firstName) }} #}
        <input type="text" id="form6Example1" class="form-control" value={{ 'firstName' }}/>
      </div>
    </div>
    <div class="col">
      <div class="form-outline">
      {# {{ form_row(contactType.lastName) }} #}
        <input type="text" id="form6Example2" class="form-control" value={{ 'lastName' }}/>
      </div>
    </div>
  </div>

  <div class="form-outline mb-4">
  {# {{ form_row(contactType.email) }} #}
    <input type="email" id="form6Example5" class="form-control" value={{ 'email' }}/>
  </div>

  <div class="form-outline mb-4">
  {# {{ form_row(contactType.telephone) }} #}
    <input type="number" id="form6Example6" class="form-control" value={{ 'telephone' }}/>
  </div>

  <div class="form-outline mb-4">
  {# {{ form_row(contactType.objet) }} #}
    <input type="text" id="form6Example4" class="form-control" value={{ 'objet' }}/>
  </div>

  <div class="form-outline mb-4">
  {# {{ form_row(contactType.message) }} #}
    <textarea class="form-control" id="form6Example7" rows="4" value={{ 'message' }}></textarea>
  </div>

  
  <button type="submit" class="btn btn-primary btn-block mb-4">Place order</button>

{{ form_end(form) }}
  

</main>
{% endblock %}
